doctype html
html(lang='en')
  head
    title Song Recognition
    meta(lang='en')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    script(src='https://cdn.jsdelivr.net/npm/vue/dist/vue.js')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/cover.css')

  body(class='text-center')
    div(class='cover-container d-flex w-100 h-100 p-3 mx-auto flex-column', id='app')
      header(class='masthead mb-auto')
        div(class='inner')
          h3(class='masthead-brand') Music identification empowered by lyric matching
          nav(class='nav nav-masthead justify-content-center')
            a(class='nav-link active', href='#') Home

      main(role='main', class='inner cover')
        h4(class='cover-heading mb-3') {{ mainText }}
        button(@click='clickButton', :disabled='buttonDisabled', href='#', class='btn btn-primary btn-lg') {{ buttonText }}

      footer(class='mastfoot mt-auto')
        div(class='inner')
          p Experiment developed for Physics 136

    script(src='/js/main.js')

